<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"/>

        <Button
            android:id="@+id/btn_activity_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="TransparentTitleBar"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_activity_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="DefaultTitleBar"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_activity_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="WhiteTitleBar"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_activity_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="NoTitleBar"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Fragment"/>

        <Button
            android:id="@+id/btn_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Fragment"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_fragment_nesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="FragmentNesting"
            android:onClick="onClick"/>

    </LinearLayout>

</RelativeLayout>